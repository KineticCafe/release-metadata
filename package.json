{
  "name": "@kineticcafe/release-metadata",
  "version": "1.1.1",
  "description": "Generate a file that describes a release for use in various ways",
  "author": "Kinetic Cafe & contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/KineticCafe/release-metadata.git"
  },
  "license": "MIT",
  "keywords": ["cli", "git", "metadata", "release", "typescript"],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "homepage": "https://github.com/KineticCafe/release-metadata#readme",
  "bin": {
    "release-metadata": "dist/cli.js"
  },
  "scripts": {
    "build": "pnpm exec tsup",
    "build:all": "pnpm run build && pnpm run build:docs",
    "build:docs": "pnpm exec typedoc",
    "build:simple": "pnpm exec tsup --no-dts-resolve --no-dts",
    "build:watch": "pnpm exec tsup --watch | pnpm exec typedoc --watch --preserveWatchOutput",
    "cli": "pnpm exec ts-eager src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check",
    "lint": "eslint src/ --ext .js,.ts",
    "prepublishOnly": "pnpm build",
    "test": "pnpm run build:simple && jest"
  },
  "files": ["dist", "src"],
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@tsconfig/node10": "^1.0.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.14.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "commander": "^8.0.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.14",
    "eslint": "^7.29.0",
    "eslint-plugin-prettier": "^3.4.0",
    "is-plain-object": "^5.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-eager": "^2.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "tsup": "^4.12.4",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  }
}
