{
  "name": "@kineticcafe/release-metadata",
  "version": "2.0.0",
  "description": "Generate a file that describes a release for use in various ways",
  "author": "Kinetic Commerce & contributors",
  "homepage": "https://github.com/KineticCafe/release-metadata#readme",
  "bugs": {
    "url": "https://github.com/KineticCafe/release-metadata/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KineticCafe/release-metadata.git"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "git",
    "metadata",
    "release",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "bin": {
    "release-metadata": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:all": "pnpm run build && pnpm run build:docs",
    "build:docs": "typedoc",
    "build:simple": "tsup --no-dts-resolve --no-dts",
    "build:watch": "concurrently 'tsup --watch' 'typedoc --watch --preserveWatchOutput'",
    "cli": "ts-eager src/cli.ts",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "prepublishOnly": "pnpm build",
    "test": "pnpm run build:simple && jest"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "commander": "^12.0.0",
    "concurrently": "^8.2.2",
    "deepmerge": "^4.3.1",
    "is-plain-object": "^5.0.0",
    "jest": "^29.7.0",
    "ts-eager": "^2.0.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.9",
    "typescript": "^5.3.3"
  }
}
